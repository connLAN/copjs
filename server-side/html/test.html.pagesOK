<!DOCTYPE html>
<html>
<head>
    <title>Image Gallery</title>
    <style>
        /* Styles for profile menu */
        .profile-menu {
            position: relative;
            display: inline-block;
        }
        .profile-menu-content {
            display: none;
            position: absolute;
            z-index: 1;
            top: 100%;
            right: 0;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            padding: 12px 16px;
        }
        .profile-menu:hover .profile-menu-content {
            display: block;
        }


        #image-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        #image-grid img {
            width: 30%;
            height: 30%;
            max-height: 400px;
            margin: 10px;
            cursor: pointer;
        }

        #large-image {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            max-width: 90%;
            max-height: 90%;
            z-index: 9999;
            display: none;
        }

        #close-button {
            position: fixed;
            top: 10px;
            right: 10px;
            font-size: 24px;
            color: white;
            cursor: pointer;
        }

        #pagination {
            text-align: center;
        }

        .page-link {
            display: inline-block;
            padding: 8px 16px;
            text-decoration: none;
            color: black;
            border: 5px solid #ddd;
            margin-right: 10px;
            margin-bottom: 5px;
        }

        .page-link.active {
            background-color: #4CAF50;
            color: white;
            border: 10px solid #4CAF50;
        }

        .page-link:hover:not(.active) {
            background-color: #ddd;
        }

        .dots {
            margin-right: 10px;
        }
    </style>
</head>
<body>


    <div class="profile-menu">
        <img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar" style="width:40px">
        <div class="profile-menu-content">
            <a href="#">Profile</a>
            <a href="#">Settings</a>
            <a href="#">Logout</a>
        </div>
    </div>
    
    <div id="image-grid"></div>

    <div id="pagination"></div>

    <img id="large-image" src="">
    <div id="close-button" onclick="hideImage()">&times;</div>

    <script>
        var xhr = new XMLHttpRequest();
        xhr.open('GET', 'images.json');
        xhr.onload = function() {
            if (xhr.status === 200) {
                try {
                    var images = JSON.parse(xhr.responseText);
                    var imageGrid = document.getElementById('image-grid');
                    var pagination = document.getElementById('pagination');
                    if (imageGrid && pagination) {
                        var currentPage = 1;
                        var imagesPerPage = 12;
                        var totalPages = Math.ceil(images.length / imagesPerPage);

                        function showPage(page) {
                            currentPage = page;
                            imageGrid.innerHTML = '';
                            for (var i = (page - 1) * imagesPerPage; i < page * imagesPerPage && i < images.length; i++) {
                                const image = images[i];
                                const smallImg = document.createElement('img');
                                smallImg.src = image.url;
                                smallImg.onclick = function() {
                                    showImage(image.url);
                                };
                                imageGrid.appendChild(smallImg);
                            }

                            pagination.innerHTML = '';

                        if (currentPage < 6) {
                            // Show first 10 page links
                            for (var i = 1; i <= Math.min(totalPages, 10); i++) {
                                addPageLink(i);
                            }
                            if (totalPages > 10) {
                                addDotsLink();
                                addPageLink(totalPages);
                            }
                        } else if (currentPage > totalPages - 5) {
                            // Show last 10 page links
                            if (totalPages > 10) {
                                addPageLink(1);
                                addDotsLink();
                            }
                            for (var i = totalPages - 9; i <= totalPages; i++) {
                                addPageLink(i);
                            }
                        } else if (currentPage > 10 && currentPage < totalPages - 10) {
                            // Show 10 page links around current page
                            addPageLink(1);
                            addDotsLink();
                            for (var i = currentPage - 4; i <= currentPage + 5; i++) {
                                addPageLink(i);
                            }
                            addDotsLink();
                            addPageLink(totalPages);
                        } else {
                            // Show 5 page links before and after current page
                            addPageLink(1);
                            if (currentPage > 6) {
                                addDotsLink();
                            }
                            for (var i = currentPage - 2; i <= currentPage + 2; i++) {
                                addPageLink(i);
                            }
                            if (currentPage < totalPages - 5) {
                                addDotsLink();
                            }
                            addPageLink(totalPages);
                        }

                        function addPageLink(page) {
                            const pageLink = document.createElement('a');
                            pageLink.href = '#';
                            pageLink.innerHTML = page;
                            pageLink.onclick = function() {
                                showPage(page);
                                return false;
                            };
                            if (page === currentPage) {
                                pageLink.classList.add('active');
                            }
                            pagination.appendChild(pageLink);
                            if (page < totalPages) {
                                const spacer = document.createElement('span');
                                spacer.innerHTML = '&nbsp;&nbsp;&nbsp;&nbsp;';
                                pagination.appendChild(spacer);
                            }
                        }

                        function addDotsLink() {
                            const dotsLink = document.createElement('span');
                            dotsLink.innerHTML = '...';
                            dotsLink.classList.add('page-link', 'dots');
                            pagination.appendChild(dotsLink);
                            const spacer = document.createElement('span');
                            spacer.innerHTML = '&nbsp;&nbsp;&nbsp;&nbsp;';
                            pagination.appendChild(spacer);
                        }

                        }

                        showPage(currentPage);
                    } else {
                        console.log('Error: imageGrid or pagination is null or undefined');
                    }
                } catch (e) {
                    console.log('Error parsing JSON: ' + e);
                }
            } else {
                console.log('Request failed.  Returned status of ' + xhr.status);
            }
        };
        xhr.send();

        function showImage(imageUrl) {
            window.open(imageUrl, '_blank');
        }

        function hideImage() {
            var largeImage = document.getElementById('large-image');
            largeImage.style.display = 'none';
        }
    </script>
</body>
</html>