<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>All Courses</title>
    <style>
      /* Reset styles */
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      /* Body styles */
      body {
        font-family: Arial, sans-serif;
        font-size: 16px;
        line-height: 1.5;
        background-image: url("snow.jpg");
      }

      /* Header styles */
      header {
        background-color: #333;
        color: #fff;
        padding: 1rem;
      }

      header h1 {
        font-size: 2rem;
        margin: 0;
      }

      /* Grid styles */
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        grid-gap: 2rem;
        margin: 2rem;
      }

      .grid-item {
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        padding: 1rem;
      }

      .grid-item h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
      }

      .grid-item img {
        max-width: 100%;
        height: auto;
        margin-bottom: 0.5rem;
      }

      .grid-item p {
        margin-bottom: 0.5rem;
      }

      .grid-item button {
        background-color: #333;
        border: none;
        border-radius: 3px;
        color: #fff;
        cursor: pointer;
        font-size: 1rem;
        padding: 0.5rem 1rem;
        transition: background-color 0.3s ease;
      }

      .grid-item button:hover {
        background-color: #555;
      }

      /* Add new course styles */
      .add-new-course {
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        margin: 2rem;
        padding: 1rem;
        text-align: center;
      }

      .add-new-course a {
        background-color: #333;
        border: none;
        border-radius: 3px;
        color: #fff;
        cursor: pointer;
        display: inline-block;
        font-size: 1rem;
        padding: 0.5rem 1rem;
        text-decoration: none;
        transition: background-color 0.3s ease;
      }

      .add-new-course a:hover {
        background-color: #555;
      }

  .new-course {
    background-color: #f5f5f5;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    margin: 2rem;
    padding: 1rem;
    text-align: center;
  }

  .new-course h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .new-course form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .new-course label {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  .new-course input,
  .new-course textarea {
    border: 1px solid #ccc;
    border-radius: 3px;
    font-size: 1rem;
    padding: 0.5rem;
    margin-bottom: 1rem;
    width: 100%;
    max-width: 500px;
  }

  .new-course button {
    background-color: #333;
    border: none;
    border-radius: 3px;
    color: #fff;
    cursor: pointer;
    font-size: 1rem;
    padding: 0.5rem 1rem;
    transition: background-color 0.3s ease;
    margin-top: 1rem;
  }

  .new-course button:hover {
    background-color: #555;
  }

  .new-course .cancel-btn {
    background-color: #ccc;
    color: #333;
    margin-left: 1rem;
  }

  .new-course .cancel-btn:hover {
    background-color: #999;
  }


    </style>
  </head>
<body>
  <header>
    <h1>All Courses</h1>
  </header>
  
  <div class="grid">
    <div class="grid-item">
      <h2>Course 1</h2>
      <img src="course1.jpg" alt="Course 1">
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, velit euismod bibendum.</p>
      <button class="release-btn">Release</button>
      <button class="delete-btn">Delete</button>
      <p class="status-text">Status: Released</p>
    </div>
    <div class="grid-item">
      <h2>Course 2</h2>
      <img src="course2.jpg" alt="Course 2">
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, velit euismod bibendum.</p>
      <button class="release-btn">Release</button>
      <button class="delete-btn">Delete</button>
      <p class="status-text">Status: Unreleased</p>
    </div>
    <div class="grid-item">
      <h2>Course 3</h2>
      <img src="course3.jpg" alt="Course 3">
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, velit euismod bibendum.</p>
      <button class="release-btn">Release</button>
      <button class="delete-btn">Delete</button>
      <p class="status-text">Status: Released</p>
    </div>
    <div class="grid-item">
      <h2>Course 4</h2>
      <img src="course4.jpg" alt="Course 4">
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, velit euismod bibendum.</p>
      <button class="release-btn">Release</button>
      <button class="delete-btn">Delete</button>
      <p class="status-text">Status: Unreleased</p>
    </div>
  </div>
  <div class="grid-item new-course">
    <h2>New Course</h2>
    <form>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>

      <label for="description">Description:</label>
      <textarea id="description" name="description" required></textarea>

      <!-- <label for="image">Image:</label>
      <input type="file" id="image" name="image" accept="image/*"> -->

      <button type="submit">Create Course</button>
      <button type="button" class="cancel-btn">Cancel</button>
    </form>
  </div>

  <script>
  // Get the form element
  const form = document.querySelector('.new-course form');

  // Add a submit event listener to the form
  form.addEventListener('submit', (event) => {
    alert('Form submitted!');
    // Prevent the default form submission behavior
    event.preventDefault();

    const id_name = document.getElementById("name");
    const id_description = document.getElementById("description");
    alert(id_name.value,id_description.value);

  
    // Get the form data
    const  data = {
      name: id_name.value,
      description: id_description.value,
      author: 'admin',
      image: 'my-image.jpg'
    };
    

    // Send a POST request to the server with the form data
    fetch('/addCourse', {
      method: 'POST',
      body: JSON.stringify(data),
    })
    .then(response => {
      alert(response.status + " " + response.statusText);
      alert(response.text());
      if (response.ok) {
        // If the response is OK, reload the page to show the new course
        location.reload();
      } else {
        // If the response is not OK, display an error message
        alert('Error creating course');
      }
    })
    .catch(error => {
      // If there is an error, display an error message
      alert(error);
    });
  });


  </script>

</body>




</html>